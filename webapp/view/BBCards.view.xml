<mvc:View controllerName="HNGv2.highnoongamble.controller.BBCards" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:layout="sap.ui.layout">
    <Shell>
        <Page id="page" title="{i18n>bigbookCardsTitle}">
        <List
		id="bbcards"
		class="sapUiResponsiveMargin"
		width="auto"
		items="{bbcards>/bbcards}">
		<headerToolbar>
			<Toolbar>
				<SearchField placeholder="Enter Big Book card number" width="50%" search=".onSearch"/>
			</Toolbar>
		</headerToolbar>
		<items>
			<ObjectListItem
				title="{bbcards>id}: {bbcards>quote}">				
			</ObjectListItem>
		</items>
	</List>
        </Page>
    </Shell>
</mvc:View>
