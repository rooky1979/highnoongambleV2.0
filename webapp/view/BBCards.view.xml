<mvc:View controllerName="HNGv2.highnoongamble.controller.Tools" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:layout="sap.ui.layout">
    <Shell>
        <Page id="page" title="{i18n>bigbookCardsTitle}">
        <Toolbar>
            <!-- <ToolbarSpacer/> -->
            <SearchField placeholder="Enter card number" search=".onSearch" width="40%"/>
        </Toolbar>
            <content>
                <Table id="bbcards" items="{path: 'bbcards>/bbcards'}">
                <columns>
                <Column width="0.5rem">
                    <Label text="Card No."/>
                </Column>
                <Column width="11rem">
                    <Label text="Reading"/>
                </Column>
                </columns>
                <ColumnListItem>
                    <Text text="{bbcards>id}"/>
                    <Text text="{bbcards>quote}"/>
                </ColumnListItem>
                </Table>
                <Panel class="sapUiResponsiveMargin" width="auto">
                    <content>
                        <GenericTile>
                            <TileContent>
                                <!-- <ImageContent src="webapp/images/mindout.jpg" /> -->
                                <Text text="{chapter3>/chapter3/text1}" />
                            </TileContent>
                        </GenericTile>
                    </content>
                </Panel>
            </content>
        </Page>
    </Shell>
</mvc:View>
